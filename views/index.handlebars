<!-- Homepage-->
<div class="container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">MONGO SCRAPER</h1>
      <p class="lead pjumbo">NEW YORK TIMES EDITION</p>
    </div>
  </div>
  <div class="col-md-12">
    {{#if article}}
    {{#each article}}
    <div class="card">
      <h3 class="card-header">{{this.title}}</h3>
      <div class="row">
        <div class="col-lg-8 card-block">
          <p class="card-text">{{this.summary}}</p>
          <a href="http://www.newyorktimes.com{{this.link}}" target="_blank" class="card-link">Read more</a>
        </div>
        <div class="col-lg-4 align-self-end text-right">
          {{#if saved}}
          <button class="btn btn-secondary m-2 disabled">Article Saved</button>
          {{else}}
          <button class="btn btn-success m-2 btn-save" data-id="{{this._id}}">Save Article</button>
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
    {{else}}
    <div class="panel panel-default">
      <div class="panel-body">
        <h4>Uh Oh. Looks like we don't have any new articles.</h4>
      </div>
    </div>
    {{/if}}
  </div>
</div>